{
    "env": {
      "browser": true,
      "es2021": true,
      "jest": true             // Active les variables globales Jest pour les tests
    },
    "extends": [
      "eslint:recommended",    // Règles de base ES
      "plugin:react/recommended" // Recommandé pour React
    ],
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true            // Pour JSX
      },
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "plugins": [
      "react"
    ],
    "rules": {
      "no-unused-vars": "warn",      // Préviens pour les variables non utilisées
      "react/react-in-jsx-scope": "off", // Utile pour React 17+
      "react/prop-types": "off"      // (si tu n’utilises pas PropTypes)
    },
    "settings": {
      "react": {
        "version": "detect" // Détecte automatiquement la version de React
      }
    }
  }